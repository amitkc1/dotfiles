set -e

if [ ! -d ~/dotfiles ]; then
    pushd ~
    git clone https://github.com/hgontijo/dotfiles.git
    popd
else
    pushd ~/dotfiles
    git pull --rebase
    popd
fi

cp -f ~/dotfiles/profile ~/.profile

# Install Homebrew
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"